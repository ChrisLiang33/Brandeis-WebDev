<!-- layout  -->
<html>

<head>
    <link href="/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <header>
        <img src="\images\BrandeisLogo.png" alt="university logo">
        <h2>
            <span id="universityfont">
                <div>Brandeis University</div>
            </span>
            <br>
            <span id="alumnifont"> &emsp;Student & Alumni Association</span>
        </h2>
    </header>
    <ul class="nav">
        <li><a href="/index">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/users">User</a></li>
        <li><a href="/jobs">Jobs</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/contact">Contact</a></li>
        <li><a href="/chat" class="chat-icon">Chat @</a></li>
        <li><%- include('events/_eventsModal') %></li>
    </ul>

    <div class="flashes">
        <% if (flashMessages) { %>
            <% if (flashMessages.success) { %>
                <div class="flash success">
                    <%= flashMessages.success %>
                </div>
                <%} else if (flashMessages.error){ %>
                    <div class="flash error">
                        <%= flashMessages.error %>
                    </div>
                    <%} %>
                        <%} %>
    </div>
    <% if (loggedIn) { %> Logged in as
        <a href="<%=`/users/${currentUser._id}`%>">
            <%= currentUser.fullName %>
        </a>
        <div style="display: none" id="apiToken">
            <%= currentUser.apiToken %>
        </div>

        <a href="/users/logout"> &emsp; Log out</a>
        <%} else {%>
            <a href="/users/login">Sign In</a>
            <br>
            <a href="/users/new">Sign Up</a>

            <% } %>

                <%- body%>

                    <footer>
                        &emsp; &copy; 2023 Brandeis University
                        <a href="#" class="fa fa-instagram"></a>
                        <a href="#" class="fa fa-linkedin"></a>
                        <a href="#" class="fa fa-youtube"></a>
                        <a href="#" class="fa fa-twitter"></a>
                        <a href="#" class="fa fa-facebook"></a>
                    </footer>

                    <script type="text/javascript" src="/js/jquery.min.js"></script>
                    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
                    <script type="text/javascript" src="/js/recipeApp.js"></script>
</body>

</html>