        <label class="label" for="attendees">Attendees:</label>
        <input type="email" id="attendees" name="attendees" value="<% event.attendees.forEach((attendee) => { %>
            <%= attendee.email %>
        <% }) %>%>"> -->

        <br><button type="submit">Update</button>
    </div>
</form>