<!-- job edit  -->
<p id="universityfont">Edit Job</p>
<form action="<%=`/jobs/${job._id}/update?_method=PUT`%>" method="POST">
    <div class="formbody">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= job.title %>" required>

        <label for="company">Company:</label>
        <input type="text" id="company" name="company" value="<%= job.company %>" required>

        <label for="location">location:</label>
        <input type="text" id="location" name="location" value="<%= job.location %>" required>

        <label for="description">Description:</label><br>
        <textarea name="description" required><%= job.description %></textarea>

        <label for="requirements">Requirements:</label><br>
        <textarea id="requirements" name="requirements" rows="5" cols="50" required><%= job.requirements %></textarea>

        <label for="salary">Salary:</label>
        <input type="number" id="salary" name="salary" value="<%= job.salary %>" required>

        <label for="contactEmail">Contact Email:</label>
        <input type="email" id="contactEmail" name="contactEmail" value="<%= job.contactEmail %>" required>

        <label for="contactPhone">Contact Phone:</label>
        <input type="tel" id="contactPhone" name="contactPhone" value="<%= job.contactPhone %>" required>

        <label for="deadlineDate">Deadline Date:</label>
        <input type="date" id="deadlineDate" name="deadlineDate" value="<%= job.deadlineDate %>" required>

        <br><button type="submit">Update</button>
    </div>
    
</form>